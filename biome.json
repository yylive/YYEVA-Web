{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "extends": ["@empjs/biome-config"],
  "files": {
    "ignore": ["*.vue", "*.svelte", "*.astro"],
    "ignoreUnknown": true,
    "include": ["*.mjs", "*.cjs", "*.ts", "*.json", "*.jsonc", "emp-config.js", ".vscode/"]
  },
  "linter": {
    "rules": {
      "style": {
        "useSelfClosingElements": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedImports": "info"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
